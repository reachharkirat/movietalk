%h2 Details about #{@movie.title}

%u1#details
  %li
    Rating:
    = @movie.rating
  %li 
    Release on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

= link_to 'Back to movie list', movies_path
= link_to "Edit Movie #{@movie.title}", edit_movie_path(@movie)
= button_to "Delete Movie #{@movie.title}", movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
